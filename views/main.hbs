<section class='p-4 bg-light'>
  <h1 class='text-secondary text-center text-success'>Bienvenido
    {{user.name}}</h1>

  <div class='mb-3'>
    <div>
      <label class='form-label fw-bold text-secondary fs-3' for='login'>Tus datos son:</label>
      <div>
        usuario:
        {{user.username}}
        <br />
        Nombre:
        {{user.name}}
        <br />
        Direccion:
        {{user.address}}
        <br />
        Edad:
        {{user.age}}
        <br />
        Telefono:
        {{user.phone}}
        <br />
        Imagen:
        {{user.url}}
      </div>
    </div>
    <br />
    <button type='button' class='btn btn-outline-danger'><a href='/api/logout' style='text-decoration: none;'>Salir</a></button>
  </div>
</section>

{{! FORMULARIO INGRESO PRODUCTO }}
<br />
<section class='p-4 bg-light'>
  <h1 class='text-secondary text-center'>Ingrese una fruta</h1>
  <form onsubmit='return false'>
    <div class='mb-3'>
      <label class='form-label fw-bold text-secondary fs-3' for='name'>Nombre:</label>
      <input id='inputTitle' class='form-control' type='text' name='title' required />
    </div>
    <div class='mb-3'>
      <label class='form-label fw-bold text-secondary fs-3' for='price'>Precio:</label>
      <input id='inputPrice' class='form-control' type='number' name='price' required />
    </div>
    <div class='mb-3'>
      <label class='form-label fw-bold text-secondary fs-3' for='picture'>Foto URL:</label>
      <input id='inputThumbnail' class='form-control' type='url' name='thumbnail' required />
    </div>
    <div class='mb-3'>
      <button class='btn btn-success d-block mx-auto' onclick='sendProd()'>Enviar</button>
      {{! <input class='btn btn-success d-block mx-auto' type='submit' value='Enviar' /> }}
    </div>
  </form>
</section>

{{! LISTADO PRODUCTOS }}
{{! products viene del archivo server.js // linea 74  }}
<br />
{{#if products}}
  <h1 class='text-secondary text-center'>Listado de Productos</h1>
  {{#each products}}
    <div class='card' style='width: 18rem;'>
      <img src={{this.thumbnail}} class='card-img-top' alt='...' />
      <div class='card-body'>
        <h5 class='card-title'>{{this.title}}</h5>
        <p class='card-text'>{{this.price}}</p>
        <button type='button' class='btn btn-success' id='${obj._id}' onclick='addToCart()'>Agregar al carrito</button>
      </div>
    </div>
  {{/each}}
{{/if}}

